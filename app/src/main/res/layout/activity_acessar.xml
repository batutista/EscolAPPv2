<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.italoqueiroz.escolapp.Atividades.Acessar"
    android:orientation="vertical"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/text_sign_in_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/buttonMapas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Mapas"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:onClick="mostraMapa"
        />

    <Button
        android:id="@+id/buttonListaEscolas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Lista de Escolas"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:onClick="mostraEscolas"
        />

</LinearLayout>
